package ¾Å¹¬¸ñ;
import java.util.*;
public class nine {
		public static void main(String [] arg) {
			ninemain.jiugong(3);
		}
 }
 class ninemain{
	  static void jiugong(int n) {
		int[][] a = new int[n][n];
		int x = 0;int y = n/2;
		for(int i = 1;i<=n*n;i++) {
			a[x--][y--] = i;
			if(a[x][y]!=0) {
				x=x+2;
				y++;
			}
			if(x<0||x>n-1)
				x=x%n;
			if(y<0||y>n-1)
				y = y%n;
		}
		for(int i1 = 0;i1<n;i1++) {
			for(int s = 0;s<n;s++) {
				System.out.print(a[i1][s]+"\t");
			}
			System.out.println();
		}
	}
	
}

